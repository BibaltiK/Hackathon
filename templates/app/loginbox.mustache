<div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body  text-center">
                    <form name="loginBox" action="login" method="post">
                        <h4 class="fw-bold">Deine Anmeldedaten</h4>
                        <div class="form-outline form-white">
                            <label class="form-label text-white-50" for="userName">Benutzername</label>
                            <div id="username_alert" class="alert invisible">
                                <p class="mb-0"></p>
                            </div>
                            <input type="text" id="userName" name="userName" value="{{ userName }}" class="form-control form-control-sg"/>
                        </div>
                        <div class="form-outline form-white">
                            <label class="form-label text-white-50" for="password">Passwort</label>
                            <div id="password_alert" class="alert invisible">
                                <p class="mb-0"></p>
                            </div>
                            <input type="password" id="password" name="password" class="form-control form-control-sg"/>
                        </div>
                        <p class="small pb-lg-2 py-2"><a href="#!">Passwort vergessen?</a></p>
                        <button class="btn btn-outline-light btn-lg px-5" type="submit">Anmelden</button>
                        <div class="p-4">
                            <p class="mb-0">Du hast kein Konto? <a href="user/register" class="text-white-50 fw-bold">Registrieren</a></p>
                        </div>
                        <p class="p-2">oder anmelden mit</p>
                        <div class="d-flex justify-content-center text-center">
                            <a href="#Discord" class="text-white"><i class="fab fa-discord fa-lg"></i></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
